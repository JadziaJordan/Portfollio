@{
    ViewData["Title"] = "Search News by Category";
}

<h2>Search News by Category</h2>

<form asp-action="Search" method="post">
    <div class="form-group">
        <label for="category">Category:</label>
        <input type="text" class="form-control" id="category" name="category" placeholder="Enter a category (e.g. Technology, Business)" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (Model?.Articles != null && Model.Articles.Count > 0)
{
    <h3>Search Results:</h3>
    <div class="row">
        @foreach (var article in Model.Articles)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <img src="@article.UrlToImage" class="card-img-top" alt="Article image" />
                    <div class="card-body">
                        <h5 class="card-title">@article.Title</h5>
                        <p class="card-text">@article.Description</p>
                        <a href="@article.Url" class="btn btn-primary" target="_blank">Read More</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else if (Model?.Articles == null)
{
    <p>No articles found for the given category.</p>
}
