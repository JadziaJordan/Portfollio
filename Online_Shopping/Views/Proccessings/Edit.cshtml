@model Cloud_FinalTwo.Models.Proccessing

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Proccessing</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Process_ID" />
            <div class="form-group">
                <label asp-for="shopperID" class="control-label"></label>
                <input asp-for="shopperID" class="form-control" />
                <span asp-validation-for="shopperID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pocessedProducts" class="control-label"></label>
                <input asp-for="pocessedProducts" class="form-control" />
