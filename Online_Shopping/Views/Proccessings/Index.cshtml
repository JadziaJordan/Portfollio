@model IEnumerable<Cloud_FinalTwo.Models.Proccessing>

@{
    ViewData["Title"] = "Index";
}



<h1 class="display-4 bebas-neue-regular">UNPROCESSED ORDERS</h1>
<table class="table">
    <thead>
        <tr>
            <th>Customer </th>
            <th>
                Products
            </th>
            <th>
                Total (R)
            </th>
            <th>
                Quantity
            </th>
            <th>
                Order Placed
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Where(m => !m.isProcessed))
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.shopperID)</td>
                <td>@Html.DisplayFor(modelItem => item.pocessedProducts)</td>
                <td>@Html.DisplayFor(modelItem => item.processedTotal)</td>
                <td>@Html.DisplayFor(modelItem => item.numberItems)</td>
                <td>@Html.DisplayFor(modelItem => item.OrderDate)</td>
                <td>
                    <form asp-controller="Proccessings" asp-action="ProcessOrder" asp-route-processId="@item.Process_ID" method="post" class="card-btn">
                        <button type="submit" class="btn btn-success">Process</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<h1 class="display-4 bebas-neue-regular">PROCESSED </h1>
<table class="table">
    <thead>
        <tr>
            <th>Customer </th>
            <th>
               Products
            </th>
            <th>
               Total (R)
            </th>
            <th>
                Quantity
            </th>
            <th>
                Order Placed
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Where(m => m.isProcessed))
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.shopperID)</td>
                <td>@Html.DisplayFor(modelItem => item.pocessedProducts)</td>
                <td>@Html.DisplayFor(modelItem => item.processedTotal)</td>
                <td>@Html.DisplayFor(modelItem => item.numberItems)</td>
                <td>@Html.DisplayFor(modelItem => item.OrderDate)</td>
            </tr>
        }
    </tbody>
</table>
