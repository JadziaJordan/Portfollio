@model IEnumerable<Cloud_FinalTwo.Models.Orders>

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-4 bebas-neue-regular">MY ORDER HISTORY</h1>


<table class="table">
    <thead>
        <tr>
            
            <th>
                Email
            </th>
            <th>
                Products
            </th>
            <th>
               Quantity
            </th>
            <th>
               Order 
            </th>
            <th>
                TOTAL (R) 
            </th>
            <th>
                Processed
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.emailOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ordered_Products)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.order_Qaunt)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.order_total)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.isProcessed)
            </td>
            <td>
           
                <a asp-action="Details" asp-route-id="@item.order_id">Details</a> |
               
            </td>
        </tr>
}
    </tbody>
</table>
